generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  notes    Notes[]
}

model Notes {
  id        String   @id @default(uuid())
  title     String
  note      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
